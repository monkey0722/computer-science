{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "lib": ["ES2023", "DOM"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~": ["/"]
    }
  },
  "include": [
    "./data-structures/**/*",
    "./math/**/*",
    "./algorithms/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "node",
    "typePatches"
  ]
}
