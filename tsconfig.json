{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "~": ["/"]
    }
  },
  "include": [
    "./data-structures/**/*",
    "./recursion/**/*",
    "./algorithms/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "typePatches"
  ]
}
