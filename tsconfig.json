{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2024",
    "lib": ["ES2024", "DOM"],
    "isolatedModules": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "~": ["./"]
    },
    "types": ["node", "jest"]
  },
  "include": [
    "./data-structures/**/*",
    "./math/**/*",
    "./algorithms/**/*"
  ],
  "exclude": ["node_modules"]
}
